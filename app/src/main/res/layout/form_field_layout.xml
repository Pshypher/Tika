<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/view_margin_small"
    android:orientation="horizontal">

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:autofillHints=""
        android:background="@drawable/edit_text_drawable"
        android:cursorVisible="true"
        android:drawableEnd="@drawable/check_gray_24dp"
        android:drawablePadding="@dimen/view_margin_small"
        android:fontFamily="@font/poppins_semibold"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingStart="@dimen/view_margin_small"
        android:paddingEnd="@dimen/view_margin_small"
        android:singleLine="true"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="@dimen/form_widget_text"
        android:typeface="normal"
        tools:text="john_doe@gmail.com" />

    <view
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:visibility="invisible" />

</LinearLayout>