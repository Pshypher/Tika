<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DashboardTitleText">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_extra_large</item>
        <item name="lineHeight">36dp</item>
        <item name="android:textColor">@color/dark_gray_color</item>
    </style>

    <style name="NavigationDrawerTextAppearance">
        <item name="fontFamily">@font/barlow_semi_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark_gray_color</item>
    </style>

    <style name="LogoutTextAppearance" parent="NavigationDrawerTextAppearance">
        <item name="android:textColor">@color/light_red_color</item>
    </style>

</resources>